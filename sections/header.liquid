{% style %}
  header {
    margin: 0 auto;
    padding: 0 25px;
  }

  #logo {
    display: inline-block;
  }

  .left-menu {
    display: inline-block;
  }

  .right-menu {
    float: right;
  }

  ul {
    display: flex;
    flex-direction: row;
  }

  li {
    list-style-type: none;
    width: 150px;
    height: 50px;
    text-align: center;
    line-height: 50px;
  }
  a {
    text-decoration: none;
    display: block;
    color: #000000;
  }
{% endstyle %}

<header style="background-color: {{ section.settings.background_color }}">
  <div id="header">
    <div id="logo"><a href="#">Dale26</a></div>
    <div class="left-menu">
      <ul>
        <li><a href="#">Home</a></li>
        <li><a href="#">Catalog</a></li>
        <li><a href="#">Contact</a></li>
      </ul>
    </div>
    <div class="right-menu">
      <ul>
        <li><a href="#">Search</a></li>
        <li><a href="#">Add to cart</a></li>
      </ul>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "tag": "section",
  "class": "header-section",
  "settings": [
    {
      "type": "select",
      "id": "background_color",
      "label": "Background Color",
      "info": "Change background color",
      "options": [
        {
          "value": "red",
          "label": "Red"
        },
        {
          "value": "green",
          "label": "Green"
        },
        {
          "value": "blue",
          "label": "Blue"
        },
        {
          "value": "white",
          "label": "White"
        }
      ],
      "default": "white"
    }
  ]
}
{% endschema %}