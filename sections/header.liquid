{{ 'header-section.css' | asset_url | stylesheet_tag }}

<header style="background-color: {{ section.settings.background_color }}">
  <div id="header">
    <div id="logo"><a href="#">Dale26</a></div>
    <div class="left-menu">
      <ul>
        <li><a href="#">Home</a></li>
        <li><a href="#">Catalog</a></li>
        <li><a href="#">Contact</a></li>
      </ul>
    </div>
    <div class="right-menu">
      <ul>
        <li><a href="#">Search</a></li>
        <li><a href="#">Add to cart</a></li>
      </ul>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "tag": "section",
  "class": "header-section",
  "settings": [
    {
      "type": "select",
      "id": "background_color",
      "label": "Background Color",
      "info": "Change background color",
      "options": [
        {
          "value": "red",
          "label": "Red"
        },
        {
          "value": "green",
          "label": "Green"
        },
        {
          "value": "blue",
          "label": "Blue"
        },
        {
          "value": "white",
          "label": "White"
        }
      ],
      "default": "white"
    }
  ]
}
{% endschema %}