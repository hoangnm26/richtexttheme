<div>
  <p>Test Section {{ section.settings.richtext }}</p>
</div>

{% for block in section.blocks %}
  {% case block.type %}
    {% when 'slider' %}
      <div {{ block.shopify_attributes }}>
        <p>Test Block</p>
      </div>
  {% endcase %}
{% endfor %}

{% schema %}
{
  "name": "Test Rich Text",
  "tag": "section",
  "class": "richtext",
  "settings": [
    {
      "type": "text",
      "id": "richtext",
      "label": "Input text"
    }
  ],
  "max_blocks": 2,
  "blocks": [
    {
      "name": "PiSlide cker",
      "type": "slider",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Image test"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slideshow",
      "settings": {
        "title": "Slideshow"
      },
      "blocks": [
        {
          "type": "slider"
        },
        {
          "type": "slider"
        }
      ]
    }
  ]
}
{% endschema %}

  